
<p id="notice"><%= notice %></p>
<%= form_for(@question) do |f| %>
<p>
  <strong>Name:</strong>
  <%= label_tag(@question.title )%>
</p>


<p>
  <div class="radio-checkbox">
  <strong>A:</strong>
  <%= check_box_tag(:A) %>
  <%= label_tag(:A_false, @question.A) %>
  </div>
</p>

<p>
  <strong>B:</strong>
  <%= check_box_tag(:B) %>
  <%= label_tag(:B_false, @question.B) %>

</p>

<p>
  <strong>C:</strong>
  <%= check_box_tag(:C) %>
  <%= label_tag(:C_true, @question.C) %>
</p>


<%= submit_tag("Submit") %>

<%end%>


<%= link_to 'Back', '/questions/'%>